<%= link_to 'Create a new post', '/posts/new' %>

<h1>List all users</h1>


<% @users.each do |user| %>
  <div>
    <div>
      <p>(<%= user.name %> profile picture)</p>
    </div>
    <h2>Name: <%= user.name %></h2>
    <p>Number of posts: <%= user.posts.count%></p>
    <%= link_to 'User details', "/users/#{user.id}" %>
  </div>
<% end %> 